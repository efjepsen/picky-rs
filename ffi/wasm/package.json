  "devDependencies": {
    "vite": "^4.2.12",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-top-level-await": "^1.3.1",
    "vite-plugin-wasm": "^3.2.2",
    "rimraf": "^5.0.7"
  }
}